<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RitualPatternDef>
    <defName>VME_DivineStarsRitual</defName>
    <ritualBehavior>VME_DivineStarsRitual</ritualBehavior>
    <ritualObligationTargetFilter>AnyIdeoBuildingOrRitualSpot</ritualObligationTargetFilter>
    <ritualTargetFilter>IdeoBuildingOrRitualSpot</ritualTargetFilter>
    <alwaysStartAnytime>true</alwaysStartAnytime>
	<ritualOutcomeEffect>VME_DivineStarsRitualOutcome</ritualOutcomeEffect>
  </RitualPatternDef>


  

  <RitualBehaviorDef>
    <defName>VME_DivineStarsRitual</defName>
    <durationTicks>6250</durationTicks>
    <roles>
      <li Class="RitualRoleTag">
        <label>astrologer</label>
        <tag>Moralist</tag>
        <id>moralist</id>
        <precept>IdeoRole_Moralist</precept>
        <required>True</required>
        <substitutable>false</substitutable>
        <maxCount>1</maxCount>
        <countsAsParticipant>true</countsAsParticipant>
      </li>
    </roles>
    <spectatorsLabel>Participants</spectatorsLabel>
    <spectatorGerund>participate</spectatorGerund>
    <stages>
      <li>
        <defaultDuty>Spectate</defaultDuty>
		<essential>True</essential>
        <allowedSpectateSidesOverride>Vertical</allowedSpectateSidesOverride>
        <spectateDistanceOverride>1</spectateDistanceOverride>
        <spectatorsRequired>true</spectatorsRequired>
        <endTriggers>
          <li Class="StageEndTrigger_DurationPercentage">
            <percentage>1</percentage>
          </li>
        </endTriggers>
        <roleBehaviors>
          <li>
            <roleId>moralist</roleId>
            <dutyDef>SpeakOnCell_Leader</dutyDef>
            <speakerInteraction>Speech_Leader</speakerInteraction>
            <customPositions>
              <li Class="RitualPosition_BesideThing" />
            </customPositions>
          </li>
        </roleBehaviors>
		<visualEffectDef>VME_DivineStarsVisual</visualEffectDef>
      </li>
    </stages>
  </RitualBehaviorDef>

 

</Defs>