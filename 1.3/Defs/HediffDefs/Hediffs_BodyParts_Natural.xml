    <comps>
      
	  <li Class="VanillaMemesExpanded.HediffCompProperties_Infections">
        
      </li>
    </comps>
    <spawnThingOnRemoved>VME_FleshcraftedLeg</spawnThingOnRemoved>
    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1</partEfficiency>
    </addedPartProps>
  </HediffDef>

 
